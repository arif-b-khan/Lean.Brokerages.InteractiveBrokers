<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="QuantConnect.InteractiveBrokers.ToolBox.UI.Gui.GuiMainWindow"
        mc:Ignorable="d"
        Title="Interactive Brokers ToolBox"
        Width="1200"
        Height="800">
  <Grid RowDefinitions="Auto,*" ColumnDefinitions="*">
    <StackPanel Orientation="Horizontal"
          Background="{DynamicResource ThemeAccentBrush}"
          Margin="12"
          Spacing="12">
      <TextBlock Text="Interactive Brokers ToolBox" FontSize="20" FontWeight="Bold" Foreground="White"/>
      <TextBlock Text="(UI Preview)" VerticalAlignment="Center" Foreground="White"/>
    </StackPanel>

    <Border Grid.Row="1" Padding="24">
      <Grid ColumnDefinitions="2*,*">
        <StackPanel>
          <TextBlock Text="Downloads" FontSize="18" Margin="0,0,0,8"/>
          <Button Content="Start Download" Command="{Binding StartCommand}" Width="180"/>
        </StackPanel>

        <StackPanel Grid.Column="1">
          <TextBlock Text="Jobs" FontSize="18" Margin="0,0,0,8"/>
          <ListBox ItemsSource="{Binding Jobs}" Height="400"/>
        </StackPanel>
      </Grid>
    </Border>
  </Grid>
</Window>
